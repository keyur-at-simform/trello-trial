<p style="color: green"><%= notice %></p>
<h1>Boards</h1>

<% @boards.each do |board| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= link_to board.name, board %></h5>
      <%= link_to "Edit", edit_board_path(board), class:"btn btn-primary" %>
      <%= link_to "Delete", board_path(board), method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
<% end %>
